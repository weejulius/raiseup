<!DOCTYPE html>
<html>
  <head>
    <title>add a time slot</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.css" rel="stylesheet" media="screen">
    <link href="/css/raiseup.css" rel="stylesheet" media="screen">
  </head>
  <body>
    <head>
      <div class="time-slot-desc">
        <h1>Make an awesome day, drop your time to slots</h1>
        <span><p>for 2013-04-30</p></span>
      </div>
    </head>
    <div class="container-fluid">
      <div class="row-fluid" class="time-slot-new">
        <div class="span3"></div>
        <div class="span6 form-inline">
          <input type="text" name="description" id="description" class="input-large" placeholder="description" value="${description}">
          <input type="text" name="start-time" class="input-small datepicker" placeholder="start time" value="${start_time}">
          <div class="input-append">
            <input type="text" id="appendedInput"  name="estimation" class=" span4"  placeholder="estimation" value="${estimation}">
            <span class="add-on">min</span>
          </div>
          <button id="add-task-slot" class="btn">add task slot</button>
        </div>
        <div class="span3"></div>
      </div>
    </div>

    <script src="/js/jquery-2.0.0.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.websocket.js"></script>
    <script src="/js/jquery.json.js"></script>
    <script src="/js/raiseup.js"></script>
    <script>
    var websocket = $.websocket("ws://127.0.0.1:8080/todo/slots",{
      events:{
        message:function(e){alert(e.data);}
      }});
    $('#add-task-slot').click(function(e){
      websocket.send('message',{description:$('input[id=description]').val()});
    });
    </script>
  </body>
</html>
